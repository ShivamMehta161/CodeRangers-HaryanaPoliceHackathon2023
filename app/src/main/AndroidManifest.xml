<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nicotimeout.app">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NicotimeOut"
        tools:replace="android:allowBackup">
        <activity
            android:name=".userStart.NotificationOpen"
            android:exported="false" />
        <activity
            android:name=".common.QuestionActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.UserProgress"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".userStart.StartActivity_popup_fullscreen"
            android:exported="false"
            android:parentActivityName=".userStart.StartActivity_popup"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Fullscreen" />
        <activity
            android:name=".userStart.StartActivity_popup"
            android:configChanges="orientation"
            android:parentActivityName=".userStart.StartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".userStart.StartActivity_badEffects"
            android:configChanges="orientation"
            android:parentActivityName=".userStart.StartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".userStart.StartActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".common.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".common.SplashScreen"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>